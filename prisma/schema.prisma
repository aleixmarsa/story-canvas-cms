generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StoryStatus {
  draft
  published
}

enum SectionType {
  TITLE
  PARAGRAPH
  IMAGE
  VIDEO
}

model Story {
  id               Int          @id @default(autoincrement())
  slug             String       @unique
  author           String
  status           StoryStatus  @default(draft)
  components       Json         // Allowed components or config for this story
  draftVersion     Json         // Editable version
  publishedVersion Json?        // Snapshot at publish time
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  publishedAt      DateTime?
  sections         Section[]
}

model Section {
  id               Int          @id @default(autoincrement())
  storyId          Int
  slug             String
  name             String
  type             SectionType
  draftVersion     Json         // Editable content
  publishedVersion Json?        // Final content
  order            Int
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  story            Story        @relation(fields: [storyId], references: [id])
  @@unique([storyId, name])
}
