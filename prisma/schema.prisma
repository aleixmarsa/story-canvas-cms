generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StoryStatus {
  draft
  published
}


model Story {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  author      String
  components  Json     // Allowed components or config for this story
  status      StoryStatus   @default(draft)
  createdAt   DateTime @default(now())
  sections    Section[]
}

model Section {
  id        Int      @id @default(autoincrement())
  storyId   Int
  type      String   // "text", "image", "video", etc.
  content   Json     // Section content and params
  order     Int
  createdAt   DateTime @default(now())
  story     Story    @relation(fields: [storyId], references: [id])
}
